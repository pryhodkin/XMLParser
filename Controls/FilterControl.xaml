<UserControl x:Class="XMLParser.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLParser"
             mc:Ignorable="d" d:DesignWidth="166">
    <StackPanel Margin="10 0">
        <TextBlock Text="{Binding ViewProperty}" Margin="0 0 0 5"/>
        <ComboBox ItemsSource="{Binding Values}" SelectedValue="{Binding SelectedValue, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
